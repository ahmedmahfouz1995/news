<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The World Today </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body id="newsback">
        {{>header}}
        {{>navbar}}    

<section class="container">
        <div class="row">
             {{#each articles}}
            <div class="col-4">
                <div class="card newscard">
                <a href={{this.url}} target="_blank"><img src={{this.urlToImage}} class="newsimage"></a>  
                <a href={{this.url}} target="_blank" class="nodeco"><div class="Newstitle">{{this.title}}</div></a>
                <div class="p-1 ">{{this.description}}</div>
                <div class="row">
                <h5 class="text-primary col-5 source1">{{this.source.name}}</h5>
                <p class="col-5 source">by {{this.author}}</p>
                </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>




        {{>footer}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>